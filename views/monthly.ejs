    <script type="text/javascript">
        $(document).ready(function () {
          $('#sidebarCollapse').on('click', function () {
            $('#sidebar').toggleClass('active');
            $(this).toggleClass('active');
          });
        });
    </script>

    <div class="wrapper">
        <!-- Sidebar Holder -->
        <nav id="sidebar">
          <div class="sidebar-header">
            <a id = "Signout" href="login">Sign out</a>
            <h1>Life Log</h1>
          </div>
          <ul class="components">
            <li>
              <a href="log" >
                <h2>
                  Log
                </h2>
              </a>
            </li>
            <li>
              <a href="#statSubmenu" data-toggle="collapse" aria-expanded="false">
                <h2>
                  Statistics
                </h2>
              </a>
              <ul class="collapse list-unstyled" id="statSubmenu">
                <li><a href="yearly"><h3>Yearly Summary</h3></a></li>
                <li><a href="monthly" style="background-color: #351c75ff;"><h3>Monthly Summary</h3></a></li>
                <li><a href="weekly"><h3>Weekly Summary</h3></a></li>
                <li><a href="goals"><h3>Goals</h3></a></li>
              </ul>
            </li>
          </ul>
        </nav>

        <div id = "monthlyChart-container">
          <canvas id="monthlyChart"></canvas>
        </div>

        <img id = "LeftMonth" src = "/images/LeftButton.png"></src>
        <img id = "RightMonth" src = "/images/RightButton.png"></src>
        
        <script>
            var userSessionData = <%-JSON.stringify(userData) %>;
            var activities = <%-JSON.stringify(userActivities) %>;
            var displayedMonth = <%-JSON.stringify(month) %>;
            displayMonthlyChart(userSessionData, activities, displayedMonth);
            
        </script>

